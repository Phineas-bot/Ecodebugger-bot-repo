{
	"name": "ecodebugger",
	"version": "1.0.0",
	"description": "VS Code extension for eco-friendly coding",
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"lib": [
			"ES2022","DOM"
		],
		"sourceMap": true,
		"rootDir":  "src",
		"outDir":"out",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"include": ["src"],
	"scripts": {
		"build": "tsc"
	},
	"devDependencies": {
		"typescript": "^4.0.0"
	}
}
