{
  "name": "ecodebugger-bot-repo",
  "displayName": "eco-debugger",
  "description": "A gamified extension for debugging with eco coding tips.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "Ecodebugger.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "Ecodebugger.scanEcoTips",
        "title": "Scan for Eco Tips"
      },
      {
        "command": "Ecodebugger.resetProgress",
        "title": "Reset XP/Achievements"
      },
      {
        "command": "Ecodebugger.openPanel",
        "title": "Open EcoDebugger Panel"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ecodebugger-container",
          "title": "EcoDebugger",
          "icon": "media/leaf.svg"
        }
      ]
    },
    "views": {
      "ecodebugger-container": [
        {
          "id": "ecodebuggerPanel",
          "name": "EcoDebugger",
          "icon": "media/leaf.svg"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
